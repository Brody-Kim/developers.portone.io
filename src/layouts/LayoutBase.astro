---
import type { Lang } from "~/type";
import Gnb from "./gnb/Gnb.astro";

interface Props {
  lang: Lang;
  title: string;
}
const { lang, title } = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>
  </head>
  <body>
    <style is:global>
      :root {
        word-break: keep-all;
        overflow-wrap: break-word;
      }
      article div[data-rehype-pretty-code-fragment] {
        margin: 1em 0;
        padding: 0.5em 1em;
        border-radius: 0.25em;
        background-color: rgb(241, 245, 249); /* bg-slate-100 */
      }
      article div[data-rehype-pretty-code-title] {
        margin-bottom: 1em;
        color: rgba(156, 163, 175); /* text-gray */
      }
    </style>
    <Gnb lang={lang} />
    <slot />
  </body>
</html>
