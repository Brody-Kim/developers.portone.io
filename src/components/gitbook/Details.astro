<details class="group/details my-4 rounded border hover:border-orange">
  <style>
    summary {
      display: block;
      cursor: pointer;
      border-left: 4px solid transparent;
    }
    summary > .chevron {
      width: 1.25em;
      height: 1.25em;
      transition: transform 0.1s;
    }
    details[open] > summary > .chevron {
      transform-origin: center;
      transform: rotate(90deg);
    }
  </style>
  <summary
    class="flex items-center gap-3 px-4 py-2 border-l-4 border-l-transparent"
  >
    <div class="chevron" role="img">
      <i
        class="inline-block group-hover/details:text-orange i-ic-sharp-chevron-right"
      ></i>
    </div>
    <div class="my-2">
      <slot name="summary" />
    </div>
  </summary>
  <div class="flex gap-3 -mt-2 px-4 pb-2 border-l-4 border-l-transparent">
    <div class="w-5 h-5 shrink-0"></div>
    <div>
      <slot />
    </div>
  </div>
</details>
