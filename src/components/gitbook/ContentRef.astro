---
import * as path from "node:path";
import { frontmattersSignal } from "~/state/server-only/frontmatters";

interface Props {
  slug: string;
}
const { slug } = Astro.props;

const frontmatters = frontmattersSignal.value;
const fm = frontmatters[slug];
---

{
  fm && (
    <a href={path.posix.join("/docs", slug)}>
      <div class="m-4 p-4 flex gap-4 items-center rounded border bg-white transition-transform hover:translate-y-[-2px] hover:text-orange-5 hover:drop-shadow-[0_12px_13px_rgba(0,0,0,0.02)]">
        <span class="text-2xl" role="img">
          {fm.emoji}
        </span>
        {fm.title}
      </div>
    </a>
  )
}
